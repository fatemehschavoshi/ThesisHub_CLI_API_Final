# Flask secret key (change in production)
THESIS_SECRET=dev-secret-change-this

# Max upload size (MB)
THESIS_MAX_UPLOAD_MB=25

# JWT settings
THESIS_JWT_SECRET=dev-jwt-secret-change-this
THESIS_JWT_ISSUER=ThesisHub
THESIS_JWT_ALGO=HS256
THESIS_JWT_TTL=28800

# HMAC signing for QR codes
THESIS_HMAC_SECRET=dev-hmac-secret-change-this

# Bcrypt cost factor (10-16 recommended)
THESIS_BCRYPT_COST=12

# JSONL rotation (bytes)
THESIS_NOTIF_JSONL_ROTATE=10485760
THESIS_NOTIF_JSONL_RETENTION=5
THESIS_NOTIF_MEMORY_MAX=2000

# Admin credentials (for demo)
ADMIN_USER=admin
ADMIN_PASS=admin123

# Flask debug
FLASK_DEBUG=1
PORT=5000
